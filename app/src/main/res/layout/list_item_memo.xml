<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linear_memo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="?attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_memo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            tools:src="@drawable/ic_camera"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_memo"
            android:layout_toRightOf="@+id/img_memo"
            android:layout_centerVertical="true"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_memo_title"
                tools:text="THis is text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_memo_description"
                tools:text="THis is text"

                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_memo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="December 20, 18:00Pm"
                />

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>